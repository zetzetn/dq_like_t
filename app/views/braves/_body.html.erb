<%= form_with model: @brave do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'control-label' %>（１０文字以内）
    <%= form.text_field :name, class: 'form-control', required: true, maxlength: '10' %>
  </div>

  <div class="form-group">
    <%= form.submit '名前を変更する', class: 'btn btn-black btn-block' %>
  </div>
<% end %>