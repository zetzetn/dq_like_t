<%= form_with model: @brave do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'control-label' %>（１０もじいない）
    <%= form.text_field :name, class: 'form-control', required: true, maxlength: '10' %>
  </div>

  <div class="form-group">
    <%= form.submit 'なまえをへんこうする', class: 'btn btn-black btn-block' %>
  </div>
<% end %>